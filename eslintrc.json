{
    "parserOptions": {
        "ecmaVersion": 8,
        "ecmaFeatures": {
            "ecmaVersion": 2018
        },
        "sourceType": "module"
    },

    "extends": ["google"],

    "env": {
        "es6": true,
        "node": true,
        "jquery": true
    },

    "plugins": ["import", "node", "promise"],

    "globals": {
        "document": false,
        "navigator": false,
        "window": false
    },

    "rules": {
        "indent": [2, 4],
        "linebreak-style": 0,
        "require-jsdoc": 0,
        "max-len": [
            2,
            120,
            2,
            {
                "ignoreUrls": true,
                "ignorePattern": "data:image/|\\s*require\\s*\\(|^\\s*loader\\.lazy|-\\*-"
            }
        ]
    }
}
